<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.example.avggo.attendancechecker.ui.ReportUCActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:minHeight="?attr/actionBarSize"
        android:title="Class Details"
        android:id="@+id/detailToolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/colorDefault"
        android:elevation="1dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:id="@+id/wrapperLayout2"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courseCodeLbl"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:elevation="2dp"
                    android:text="Room Name:"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/roomNameReport"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1.86"
                    android:hint="Enter room name..."
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courseNamelbl"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="Faculty Name:"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/facultyNameReport"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_weight="1.25"
                    android:hint="Enter faculty..."
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/classTimelbl"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="Remarks:"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/remarkReport"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:layout_weight="0.5"
                    android:hint="Enter remarks..."
                    android:textColor="@color/black_overlay"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submitUC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="report"
                    android:theme="@style/AppTheme.Button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>